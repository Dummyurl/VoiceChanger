<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2d3440</item>
        <item name="colorPrimaryDark">#3a424e</item>
        <item name="colorAccent">#04e762</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorHighlight">@color/colorHighLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/back_ground</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--item RadioButton or CheckBox color-->
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--item text color-->

        <item name="textColorAlertDialogListItem">#fff</item>-->
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="button_detail">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:drawablePadding">@dimen/_14sdp</item>
        <item name="android:paddingLeft">@dimen/_14sdp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
